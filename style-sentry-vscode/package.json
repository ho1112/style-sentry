{
  "name": "style-sentry-vscode",
  "displayName": "Style Sentry",
  "description": "Linter for CSS design systems to enforce team's coding standards.",
  "version": "0.0.1",
  "publisher": "Lee HoYeon",
  "engines": {
    "vscode": "^1.85.0"
  },
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:css",
    "onLanguage:scss",
    "onLanguage:less"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "style-sentry": "file:../"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "18.x",
    "typescript": "^5.3.3"
  }
}