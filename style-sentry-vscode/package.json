{
  "name": "style-sentry-vscode",
  "displayName": "Style Sentry",
  "description": "Linter for CSS design systems to enforce team's coding standards.",
  "version": "1.0.2",
  "publisher": "leehoyeon",
  "icon": "images/style-sentry_128.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "contributes": {
    "configuration": {
      "title": "Style Sentry",
      "properties": {
        "style-sentry.rules.no-unused-classes": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable the rule to find unused CSS classes. (Default: true)"
        },
        "style-sentry.rules.design-system-colors.allowedColors": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "A list of allowed color values for the design system. Example: [\"#FFFFFF\", \"#000000\", \"blue\", \"red\"]"
        },
        "style-sentry.rules.numeric-property-limits": {
          "type": "object",
          "description": "Define limits for numeric CSS properties. Keys are CSS property names (e.g., 'width', 'height', 'padding'). Example: {\"z-index\": {\"threshold\": 100, \"operator\": \">=\"}, \"font-size\": {\"threshold\": 32, \"operator\": \">=\"}}",
          "patternProperties": {
            "^[a-zA-Z-]+$": {
              "type": "object",
              "properties": {
                "threshold": {
                  "type": "number",
                  "description": "The numeric threshold for the property."
                },
                "operator": {
                  "type": "string",
                  "enum": [">=", "<=", ">", "<", "=="],
                  "description": "The comparison operator (e.g., '>=', '<=')."
                }
              },
              "required": ["threshold", "operator"],
              "additionalProperties": false
            }
          },
          "default": {}
        }
      }
    }
  },
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:css",
    "onLanguage:scss",
    "onLanguage:less"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ho1112/style-sentry.git"
  },
  "license": "ISC",
  "dependencies": {
    "style-sentry": "^1.0.5"
  },
  "devDependencies": {
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.3",
    "vsce": "^2.15.0"
  }
}
