{
  "name": "style-sentry-vscode",
  "displayName": "Style Sentry",
  "description": "Linter for CSS design systems to enforce team's coding standards.",
  "version": "0.0.9",
  "publisher": "leehoyeon",
  "icon": "images/style-sentry_128.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:css",
    "onLanguage:scss",
    "onLanguage:less"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ho1112/style-sentry.git"
  },
  "license": "ISC",
  "dependencies": {
    "style-sentry": "^1.0.5"
  },
  "devDependencies": {
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.3",
    "vsce": "^2.15.0"
  }
}
